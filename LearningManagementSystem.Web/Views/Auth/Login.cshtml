@using Microsoft.AspNetCore.Mvc.TagHelpers
@model LearningManagementSystem.Web.ViewModels.LoginModel
@{
    ViewData["Title"] = "Sign In";
    Layout = "_SignInSignUp";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/signin.css" asp-append-version="true">
    <title>Sign In</title>
</head>
<body>
    <header>
        <nav>
            @* <ul class="nav-links"> *@
            @*     <li><a href="main_page.html">Main Page</a></li> *@
            @*     <li><a href="courses.html">Courses</a></li> *@
            @* </ul> *@
        
            <div class="user-box">
                <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="LoginView">Sign In</a>
                <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Registration">Sign Up</a>
            </div>
        </nav>
    </header>

    <div class="signin-container">
        <h2>Sign in to eCollege</h2>
        <form id="loginForm" asp-action="Login" method="post">
           <div class="form-group">
               <label for="username">Username</label>
               <input asp-for="Username" type="text" id="username" name="username" required>
               <span asp-validation-for="Username" class="text-danger"></span>
           </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input asp-for="Password" type="password" id="password" name="password" required>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" asp-controller="Auth" asp-action="Login">Sign in</button>
        </form>
    </div>

    <div class="createanaccount-container">
        <a>New to eCollege?<a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Registration">Create an Account</a></a>
    </div>
    
<footer>
    <div class="footer-content">
        <p>&copy; 2023 The Grant College of Science and Technology</p>
    </div>
</footer>

</body>
</html>
